<%- include("partials/boilerplate", { title, user }); %>

  <div class="listing-container">
    <div class="listing">
      <img class="listing-img" src="<%= listing.image %>" alt="image">
      <div class="listing-content">
        <h3 class="listing-heading">
          <%= listing.title %>
        </h3>
        <p>
          <%= listing.description %> <br>
            &#8377; <%= listing.price.toLocaleString() %>
        </p>
      </div>
    </div>
    <% if(listing.createdBy.toString()===user.id.toString()) { %>
      <div>
        <form action="/listings/<%= listing._id %>/<%= listing.createdBy %>" method="post">
          <button type="submit">Delete Listing</button>
        </form>
      </div>
      <% } %>
  </div>